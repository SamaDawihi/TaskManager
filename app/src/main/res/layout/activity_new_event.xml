<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center"

    android:padding="20dp"
    tools:context=".NewEvent">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <!-- Name Row -->
        <TableRow>

            <EditText
                android:id="@+id/name"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:hint="Name"
                android:textSize="15sp" />
        </TableRow>

        <!-- Type Row -->

        <TableRow>

            <Spinner
                android:id="@+id/typeList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="Select The Event Type"
                android:hint="typeId"
                android:spinnerMode="dropdown"
                android:textSize="15sp" />

            <!-- Button to Show Add New Type Row -->
            <Button
                android:id="@+id/addType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_add_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <!-- Add New Type Row -->
        <!-- Hide At Execute -->

        <TableRow android:id="@+id/newTypeRow">

            <EditText
                android:id="@+id/newTypeName"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="name"
                android:textSize="15sp" />

            <Button
                android:id="@+id/newTypeColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_color_lens_24"
                android:text=""
                android:textSize="15sp" />

            <Button
                android:id="@+id/submitNewType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_done_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <!--  Select Date Row -->

        <TableRow>

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="180sp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="SELECTED DATE"
                android:textSize="15sp" />

            <Button
                android:id="@+id/date"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_calendar_month_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <!--  Select Time Row -->

        <TableRow>

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="180sp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="SELECTED TIME"
                android:textSize="15sp" />

            <Button
                android:id="@+id/time"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_alarm_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <!--  Note Row -->

        <TableRow android:layout_width="218dp">

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:hint="note"
                android:textSize="15sp" />
        </TableRow>

        <!--  Reminder Row -->

        <TableRow>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="REMINDER"
            android:textSize="15sp" />
            <EditText
                android:id="@+id/reminderDuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="duration"
                android:inputType="number"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/reminderUnit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="This is a spinner."
                android:spinnerMode="dropdown"
                android:text="Units"
                android:textSize="15sp" />
        </TableRow>

        <!--  Select Priority Row -->

        <TableRow>

            <Spinner
                android:id="@+id/priorityList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="Priority Selector"
                android:spinnerMode="dropdown"
                android:text="priority"
                android:textSize="15sp" />
        </TableRow>

        <!--  Task Rows Start -->

        <TableRow android:id="@+id/r1">

            <EditText
                android:id="@+id/subTask1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:hint="Sub Task"
                android:textSize="15sp" />

            <Button
                android:id="@+id/addSub1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_add_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:id="@+id/r2">

            <EditText
                android:id="@+id/subTask2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:hint="Sub Task2"
                android:textSize="15sp" />

            <Button
                android:id="@+id/removeSub2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_restore_from_trash_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:id="@+id/r3">

            <EditText
                android:id="@+id/subTask3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:hint="Sub Task3"
                android:textSize="15sp" />

            <Button
                android:id="@+id/removeSub3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_restore_from_trash_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:id="@+id/r4">

            <EditText
                android:id="@+id/subTask4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:hint="Sub Task4"
                android:textSize="15sp" />

            <Button
                android:id="@+id/removeSub4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/circular_button_background"
                android:drawableBottom="@drawable/baseline_restore_from_trash_24"
                android:text=""
                android:textSize="15sp" />
        </TableRow>

        <!--  Task Rows End -->

        <!--  Add Button Row -->

        <TableRow>

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:text="ADD"
                android:textSize="15sp" />
        </TableRow>

        <!--  Resuts Row -->

        <TableRow>

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:gravity="center"
                android:text="Result" />
        </TableRow>

    </TableLayout>
</LinearLayout>
</ScrollView>