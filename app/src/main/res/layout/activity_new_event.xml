<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"
    tools:context=".NewEvent">
    <TableLayout
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <TextView
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Name"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="15sp" />
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="typeId"
                android:textSize="15sp"/>
            <Spinner
                android:id="@+id/typeList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="typeId"
                android:textSize="15sp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:contentDescription="This is a spinner." />
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="color"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/color"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="color Hex Code"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="date"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/date"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="date"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Time"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/time"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Time"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="note"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/note"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="note"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="priority"
                android:textSize="15sp"/>
            <Spinner
                android:id="@+id/priorityList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="priority"
                android:textSize="15sp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:contentDescription="This is a spinner." />

        </TableRow>
        <TableRow>
            <Button
                android:layout_span="2"
                android:id="@+id/add"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="ADD"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:gravity="center"
                android:text="Result" />
        </TableRow>
    </TableLayout>

</LinearLayout>